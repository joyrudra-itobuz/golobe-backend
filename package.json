{
  "name": "golobebackend",
  "module": "src/server.ts",
  "license": "MIT",
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "scripts": {
    "tsc": "tsc",
    "start": "nodemon dist/server.js",
    "start:dev": "concurrently \"tsc --watch\" \"prisma generate\" \"nodemon --inspect=9230 dist/server.js\"",
    "dev": "nodemon src/server.ts",
    "dev:dist": "nodemon dist/server.js",
    "browser:debug": "nodemon --inspect=9230 dist/server.js",
    "build": "yarn tsc",
    "build:watch": "yarn tsc -w",
    "lint": "eslint . --ext .ts",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "prisma:generate": "yarn prisma generate",
    "prisma:migrate": "yarn prisma migrate dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "bun-types": "latest",
    "eslint": "^8.45.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@apollo/server": "^4.9.5",
    "@prisma/client": "^5.7.0",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "pg": "^8.11.3",
    "prisma": "^5.7.0",
    "randomstring": "^1.3.0",
    "uuid": "^9.0.1"
  }
}
